{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appNamePrefix": {
      "type": "string",
      "defaultValue": "repuestera-mfrias",
      "metadata": {
        "description": "Prefijo para los nombres de los recursos"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Ubicación para todos los recursos"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "F1",
      "metadata": {
        "description": "SKU del App Service Plan"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "18-lts",
      "metadata": {
        "description": "Versión de Node.js"
      }
    }
  },
  "variables": {
    "appServicePlanNameQA": "[concat(parameters('appNamePrefix'), '-plan-qa')]",
    "backendAppNameQA": "[concat(parameters('appNamePrefix'), '-qa-api')]",
    "frontendAppNameQA": "[concat(parameters('appNamePrefix'), '-qa-web')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanNameQA')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('backendAppNameQA')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "appSettings": [
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[parameters('nodeVersion')]"
            },
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "JWT_SECRET",
              "value": "tu_jwt_secret_super_seguro_para_produccion_2024"
            },
            {
              "name": "JWT_REFRESH_SECRET",
              "value": "tu_jwt_refresh_secret_super_seguro_para_produccion_2024"
            },
            {
              "name": "UPLOAD_PATH",
              "value": "./uploads"
            },
            {
              "name": "MAX_FILE_SIZE",
              "value": "5242880"
            },
            {
              "name": "DB_TYPE",
              "value": "sqlite"
            },
            {
              "name": "DB_PATH",
              "value": "/home/data/repuestera_qa.db"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('frontendAppNameQA')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "appSettings": [
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[parameters('nodeVersion')]"
            },
            {
              "name": "PORT",
              "value": "8080"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('backendAppNameQA'), '.azurewebsites.net')]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('frontendAppNameQA'), '.azurewebsites.net')]"
    }
  }
}