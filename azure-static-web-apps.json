{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appNamePrefix": {
      "type": "string",
      "defaultValue": "repuestera-mfrias",
      "metadata": {
        "description": "Prefijo para los nombres de los recursos"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Ubicaci√≥n de los recursos"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Standard"
      ],
      "metadata": {
        "description": "SKU de Azure Static Web Apps"
      }
    }
  },
  "variables": {
    "staticWebAppName": "[concat(parameters('appNamePrefix'), '-static')]",
    "appSettings": {
      "NODE_ENV": "production",
      "DB_TYPE": "sqlite",
      "DB_PATH": "/tmp/repuestera.db",
      "JWT_SECRET": "static_web_app_jwt_secret_2024",
      "JWT_REFRESH_SECRET": "static_web_app_jwt_refresh_secret_2024"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-03-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('sku')]"
      },
      "properties": {
        "repositoryUrl": "https://github.com/tu-usuario/repuestera",
        "branch": "main",
        "buildProperties": {
          "appLocation": "/frontend",
          "apiLocation": "/backend",
          "outputLocation": "build"
        }
      }
    }
  ],
  "outputs": {
    "staticWebAppUrl": {
      "type": "string",
      "value": "[concat('https://', variables('staticWebAppName'), '.azurestaticapps.net')]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "staticWebAppName": {
      "type": "string",
      "value": "[variables('staticWebAppName')]"
    }
  }
}
