{
  "name": "repuestera-backend",
  "version": "1.0.0",
  "description": "Backend para tienda de repuestos automotrices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/initDatabase.js",
    "init-db-qa": "node scripts/initQADatabase.js",
    "init-db-prod": "node scripts/initProdDatabase.js",
    "create-prod-db-direct": "node scripts/createProdDatabaseDirect.js",
    "add-prod-data": "node scripts/addProdData.js",
    "add-more-prod-products": "node scripts/addMoreProdProducts.js",
    "add-qa-admin": "node scripts/addQAAdmin.js",
    "verify-qa-tables": "node scripts/verifyQATables.js",
    "fix-qa-roles": "node scripts/fixQARoles.js",
    "check-qa-structure": "node scripts/checkQADatabaseStructure.js",
    "fix-qa-structure": "node scripts/fixQAStructure.js",
    "create-admin": "USE_SQLITE=true node scripts/addAdminToSQLite.js",
    "dev-utils": "node scripts/dev-utils.js",
    "clean-db": "node scripts/dev-utils.js clean-db",
    "clean-uploads": "node scripts/dev-utils.js clean-uploads",
    "reset-dev": "node scripts/dev-utils.js reset",
    "db-status": "node scripts/dev-utils.js status",
    "backup": "node scripts/dev-utils.js backup",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/unit"
  },
  "keywords": [
    "repuestos",
    "automotor",
    "backend",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  }
}
