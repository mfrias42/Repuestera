{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appNamePrefix": {
      "type": "string",
      "defaultValue": "repuestera-mfrias",
      "metadata": {
        "description": "Prefijo para los nombres de los recursos QA"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Ubicación de los recursos"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "S1",
        "S2",
        "P1V2"
      ],
      "metadata": {
        "description": "SKU del App Service Plan para QA"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "18-lts",
      "metadata": {
        "description": "Versión de Node.js"
      }
    },
    "mysqlAdminLogin": {
      "type": "string",
      "defaultValue": "repuestera_admin",
      "metadata": {
        "description": "Nombre de usuario administrador de MySQL"
      }
    },
    "mysqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Contraseña del administrador de MySQL"
      }
    }
  },
  "variables": {
    "appServicePlanNameQA": "[concat(parameters('appNamePrefix'), '-plan-qa')]",
    "backendAppNameQA": "[concat(parameters('appNamePrefix'), '-api-qa')]",
    "frontendAppNameQA": "[concat(parameters('appNamePrefix'), '-web-qa')]",
    "applicationInsightsNameQA": "[concat(parameters('appNamePrefix'), '-insights-qa')]",
    "mysqlServerNameQA": "[concat(parameters('appNamePrefix'), '-qa-server')]",
    "mysqlDatabaseNameQA": "repuestera_qa"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanNameQA')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('applicationInsightsNameQA')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "Request_Source": "rest"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/flexibleServers",
      "apiVersion": "2021-12-01-preview",
      "name": "[variables('mysqlServerNameQA')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_B1ms",
        "tier": "Burstable"
      },
      "properties": {
        "administratorLogin": "[parameters('mysqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('mysqlAdminPassword')]",
        "version": "8.0.21",
        "storage": {
          "storageSizeGB": 20,
          "iops": 360,
          "autoGrow": "Enabled"
        },
        "backup": {
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        }
      }
    },
    {
      "type": "Microsoft.DBforMySQL/flexibleServers/databases",
      "apiVersion": "2021-12-01-preview",
      "name": "[concat(variables('mysqlServerNameQA'), '/', variables('mysqlDatabaseNameQA'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/flexibleServers', variables('mysqlServerNameQA'))]"
      ],
      "properties": {
        "charset": "utf8",
        "collation": "utf8_general_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/flexibleServers/firewallRules",
      "apiVersion": "2021-12-01-preview",
      "name": "[concat(variables('mysqlServerNameQA'), '/AllowAzureServices')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/flexibleServers', variables('mysqlServerNameQA'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('backendAppNameQA')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "[resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))]",
        "[resourceId('Microsoft.DBforMySQL/flexibleServers', variables('mysqlServerNameQA'))]",
        "[resourceId('Microsoft.DBforMySQL/flexibleServers/databases', variables('mysqlServerNameQA'), variables('mysqlDatabaseNameQA'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "appCommandLine": "npm start",
          "alwaysOn": true,
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "qa"
            },
            {
              "name": "PORT",
              "value": "8000"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "18.17.0"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))).InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))).ConnectionString]"
            },
            {
              "name": "DB_HOST",
              "value": "[concat(variables('mysqlServerNameQA'), '.mysql.database.azure.com')]"
            },
            {
              "name": "DB_USER",
              "value": "[parameters('mysqlAdminLogin')]"
            },
            {
              "name": "DB_PASSWORD",
              "value": "[parameters('mysqlAdminPassword')]"
            },
            {
              "name": "DB_NAME",
              "value": "[variables('mysqlDatabaseNameQA')]"
            },
            {
              "name": "DB_PORT",
              "value": "3306"
            }
          ],
          "cors": {
            "allowedOrigins": [
              "[concat('https://', variables('frontendAppNameQA'), '.azurewebsites.net')]"
            ],
            "supportCredentials": true
          }
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('frontendAppNameQA')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "[resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanNameQA'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "appCommandLine": "npx serve -s . -l 8080",
          "alwaysOn": true,
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "18.17.0"
            },
            {
              "name": "REACT_APP_API_URL",
              "value": "[concat('https://', variables('backendAppNameQA'), '.azurewebsites.net/api')]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))).InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsNameQA'))).ConnectionString]"
            }
          ]
        },
        "httpsOnly": true
      }
    }
  ],
  "outputs": {
    "backendUrlQA": {
      "type": "string",
      "value": "[concat('https://', variables('backendAppNameQA'), '.azurewebsites.net')]"
    },
    "frontendUrlQA": {
      "type": "string",
      "value": "[concat('https://', variables('frontendAppNameQA'), '.azurewebsites.net')]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "mysqlServerNameQA": {
      "type": "string",
      "value": "[variables('mysqlServerNameQA')]"
    },
    "mysqlServerFqdnQA": {
      "type": "string",
      "value": "[concat(variables('mysqlServerNameQA'), '.mysql.database.azure.com')]"
    },
    "mysqlDatabaseNameQA": {
      "type": "string",
      "value": "[variables('mysqlDatabaseNameQA')]"
    }
  }
}